{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CCG Gateway",
  "identifier": "com.ccg.gateway",
  "version": "1.1.0",
  "build": {
    "devUrl": "http://localhost:7786",
    "beforeDevCommand": "pnpm install && pnpm dev",
    "beforeBuildCommand": "pnpm install && pnpm build",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "CCG Gateway",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.github.com; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
